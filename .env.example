# ========================================
# CONFIGURAÇÕES GERAIS
# ========================================
NODE_ENV=development
APP_NAME=API BDN
APP_VERSION=1.0.0
PORT=3000

# ========================================
# MONGODB
# ========================================
MONGODB_URI=mongodb://localhost:27017/bdn

# ========================================
# SEGURANÇA
# ========================================
JWT_SECRET=your-secret-key-here
JWT_REFRESH_SECRET=your-refresh-secret-key-here
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=10
COOKIE_SECRET=your-cookie-secret-here

# ========================================
# CORS
# ========================================
# Separe múltiplas origens com vírgula
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ========================================
# OTIMIZAÇÕES
# ========================================
# Ativa modo economia para apps pequenos (Railway/Fly.io)
SMALL_APP_MODE=false

# Ativa clustering em produção (apenas apps grandes)
ENABLE_CLUSTERING=false

# Ativa logs detalhados
ENABLE_LOGS=true

# Ativa documentação Swagger em produção
ENABLE_DOCS=false

# ========================================
# URLs EXTERNAS
# ========================================
BASE_URL=http://localhost:3000

# ========================================
# INTEGRAÇÕES
# ========================================
# Postmark (E-mails)
POSTMARK_API_KEY=
POSTMARK_FROM_EMAIL=noreply@yourdomain.com

# Asaas (Pagamentos)
ASAAS_API_KEY=
ASAAS_WEBHOOK_TOKEN=

# AWS S3 (Upload de arquivos)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=
S3_BUCKET_NAME=

# SendGrid (E-mails)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=

# Twilio (WhatsApp/SMS)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_FROM=

# Cloudflare R2 (Upload de arquivos)
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=
R2_PUBLIC_URL=
R2_REGION=auto
